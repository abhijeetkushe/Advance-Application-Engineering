<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:c="components.*"
		 
		 creationComplete="this.setLabel()">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var textInput:String;
			
			private function setLabel (): void {
				label.text = textInput;
			}
			
		]]>
	</fx:Script>
	<s:VGroup width="100%">
		
		<s:HGroup width="100%">
			<s:Label id="label" width="186" height="100%" color="#000000" fontSize="15" text="{textInput}"
					 textAlign="left" verticalAlign="middle" fontWeight="normal"/>
			<c:TextInput id="username" width="160" fontWeight="normal" textAlign="left" height="30"/>
			<s:Label text="%" fontSize="22" color="#000000" height="30" fontWeight="normal" verticalAlign="middle"/>
		</s:HGroup>
		<s:Rect width="100%" height="1">
			<s:stroke>
				<s:SolidColorStroke color="#CBCBCB" weight="0.1" />
			</s:stroke>
		</s:Rect>
		
	</s:VGroup>
</s:Group>
